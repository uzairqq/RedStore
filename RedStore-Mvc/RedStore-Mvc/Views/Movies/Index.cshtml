@model IEnumerable<RedStore_Mvc.Models.Movies>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Movies</h1>
@Html.ActionLink("New Movie","New","Movies",new {@class="btn btn-primary"})
<br /><br />
@if (!Model.Any())
{
    <p>No Movies Are Available</p>
}
else
{
    <table id="movies" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in  Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id}, null)</td>
                <td>@movie.Genre.Name</td>
                <td>
                    <button data-movies-id="@movie.Id" class="btn-link js-delete">Delete</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#movies").dataTable();





            $("#movies").on("click",".js-delete",
                function () {
                    var button = $(this);
                    bootbox.confirm("Are You Sure You Want To Delete This Movie??",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/movie/" + button.attr("data-movies-id"),
                                    method: "DELETE",
                                    success: function() {
                                        button.parents("tr").remove();
                                    }
                                });

                            }
                        });
                });
        });
    </script>
}
